@model IEnumerable<CustomerProfile>

<h2>Customer Profiles</h2>
<a asp-action="Create">Create New</a>

<table class="table">
    <tr>
        <th>Full Name</th>
        <th>Email</th>
        <th>Address</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FullName</td>
            <td>@item.Email</td>
            <td>@item.Address</td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
</table>

