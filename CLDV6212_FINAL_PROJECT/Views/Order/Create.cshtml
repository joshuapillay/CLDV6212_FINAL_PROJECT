@model CLDV6212_FINAL_PROJECT.Models.Order

<h2>Create Order</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Product</label>
        @if (ViewBag.Products != null && ViewBag.Products.Count > 0)
        {
            <select asp-for="ProductId" asp-items="@(new SelectList(ViewBag.Products, "ProductId", "ProductName"))" class="form-control">
                <option value="">Select a Product</option>
            </select>
        }
        else
        {
            <p>No products available.</p>
        }
        <span asp-validation-for="ProductId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Quantity</label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Customer</label>
        @if (ViewBag.Customers != null && ViewBag.Customers.Count > 0)
        {
            <select asp-for="CustomerProfileId" asp-items="@(new SelectList(ViewBag.Customers, "Id", "FullName"))" class="form-control">
                <option value="">Select a Customer</option>
            </select>
        }
        else
        {
            <p>No customers available.</p>
        }
        <span asp-validation-for="CustomerProfileId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
