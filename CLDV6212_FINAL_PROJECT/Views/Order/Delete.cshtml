@model CLDV6212_FINAL_PROJECT.Models.Order

<h2>Delete Order</h2>

<div>
    <h4>Are you sure you want to delete this order?</h4>
    <dl class="row">
        <dt class="col-sm-2">
            Product
        </dt>
        <dd class="col-sm-10">
            @Model.Product?.ProductName ?? "N/A"
        </dd>
        <dt class="col-sm-2">
            Customer
        </dt>
        <dd class="col-sm-10">
            @Model.CustomerProfile?.FullName ?? "N/A"
        </dd>
        <dt class="col-sm-2">
            Quantity
        </dt>
        <dd class="col-sm-10">
            @Model.Quantity
        </dd>
        <dt class="col-sm-2">
            Order Date
        </dt>
        <dd class="col-sm-10">
            @Model.OrderDate
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.OrderId" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>





</div>
