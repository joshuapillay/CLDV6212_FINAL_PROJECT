@model IEnumerable<CLDV6212_FINAL_PROJECT.Models.Product>

<h2>Products</h2>

@if (User.IsInRole("Admin"))
{
    <a asp-action="Create" class="btn btn-primary">Add New Product</a>
}

<table class="table">
    <tr>
        <th>Image</th>
        <th>Name</th>
        <th>Price</th>
        <th>Description</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @if (!string.IsNullOrEmpty(item.ImageUrl))
                {
                    <img src="@item.ImageUrl" alt="@item.ProductName" width="100" />
                }
            </td>
            <td>@item.ProductName</td>
            <td>@item.Price</td>
            <td>@item.Description</td>
            <td>
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-danger">Delete</a>
                }
            </td>
        </tr>
    }
</table>
